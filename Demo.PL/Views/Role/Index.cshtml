@model List<IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Role Management</h2>

    <a asp-action="Create" class="btn btn-success mb-3">+ Create New Role</a>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Role Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this role?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No roles found.</div>
    }
</div>


