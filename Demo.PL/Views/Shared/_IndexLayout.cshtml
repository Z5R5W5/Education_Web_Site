<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Educational System</title>

    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Icons & Fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="/css/stylesheet.css" rel="stylesheet" />

    <style>
        .masthead {
            background-color: #1e1e11; /* Dark gray background */
            height: 100vh;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .masthead h1 {
                font-size: 3.5rem;
                font-weight: 700;
                text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.5);
            }

        .divider {
            height: 4px;
            width: 60px;
            background-color: #f4623a;
            margin: 1rem auto;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <header>
        <partial name="_Navbar" />
    </header>

    <!-- Hero Section -->
    <header class="masthead text-center">
        <div class="container">
            <h1>Educational System</h1>
            <div class="divider"></div>
        </div>
    </header>

    @if (TempData["successMessageForAddingCourse"] != null)
    {
        <div class="alert alert-success">
            <b>Success : </b>@TempData["successMessageForAddingCourse"]
            <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["successMessageForAddingDepartment"] != null)
    {
        <div class="alert alert-success">
            <b>Success : </b>@TempData["successMessageForAddingDepartment"]
            <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["successMessageForAddingResult"] != null)
    {
        <div class="alert alert-success">
            <b>Success : </b>@TempData["successMessageForAddingResult"]
            <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["successMessageForEditCourse"] != null)
    {
        <div class="alert alert-success">
            <b>Success : </b>@TempData["successMessageForEditCourse"]
            <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["successMessageForEditDepartment"] != null)
    {
        <div class="alert alert-success">
            <b>Success : </b>@TempData["successMessageForEditDepartment"]
            <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["successMessageForEditResult"] != null)
    {
        <div class="alert alert-success">
            <b>Success : </b>@TempData["successMessageForEditResult"]
            <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["successMessageForDeleteCourse"] != null)
    {
        <div class="alert alert-success">
            <b>Success : </b>@TempData["successMessageForDeleteCourse"]
            <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["successMessageForDeleteDepartment"] != null)
    {
        <div class="alert alert-success">
            <b>Success : </b>@TempData["successMessageForDeleteDepartment"]
            <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["successMessageForDeleteResult"] != null)
    {
        <div class="alert alert-success">
            <b>Success : </b>@TempData["successMessageForDeleteResult"]
            <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Alert Messages -->
    <div class="container mt-4">
        @foreach (var key in TempData.Keys)
        {
            if (TempData[key] != null && key.ToString().Contains("successMessage"))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success:</strong> @TempData[key]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        }
    </div>

    <!-- Main Content -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Contact Section -->
    <section class="bg-light py-5" id="contact">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Let's Get In Touch</h2>
                <p class="text-muted">Have a question? Reach out to us!</p>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form id="contactForm" data-sb-form-api-token="API_TOKEN">
                        <div class="form-floating mb-3">
                            <input class="form-control" id="name" type="text" placeholder="Your name" required />
                            <label for="name">Full name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="email" type="email" placeholder="name@example.com" required />
                            <label for="email">Email address</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="phone" type="tel" placeholder="Phone number" required />
                            <label for="phone">Phone number</label>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea class="form-control" id="message" placeholder="Your message..." style="height: 10rem" required></textarea>
                            <label for="message">Message</label>
                        </div>
                        <div id="submitSuccessMessage" class="d-none text-success text-center mb-3">Form submitted successfully!</div>
                        <div id="submitErrorMessage" class="d-none text-danger text-center mb-3">Error sending message!</div>
                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Send Message</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-4 text-center mt-4 mt-md-0">
                    <i class="bi bi-phone fs-1 text-muted mb-2"></i>
                    <div class="fs-5">+1 (555) 123-4567</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-4">
        <div class="container">
            <p class="mb-0">© 2025 Educational System. All rights reserved.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
</body>
</html>
