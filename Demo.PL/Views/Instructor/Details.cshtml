@model InstructorViewModel
@{
    ViewData["Title"] = "Details";
	var instructor = Model;
	var CourseName = ViewBag.CourseName;
	var Department = ViewBag.DeptName;

    Layout = "~/Views/Shared/_OperationLayout.cshtml";
}

<div class="card card-header shadow">

	<h1 class="text-center border border-3 bg-dark" style="color:lightgreen">Selected Item</h1>
	<div class="card shadow">

		<div class="card-body text-center shadow" style="background-color:lightgrey">
			<img class="align-self-center shadow" src="~/@instructor.ImageUrl" style="width:250px;margin-top:5px;border-radius:30px;" />
			<h3 class="card-title p-3">Name : @instructor.Name</h3>
			<h5 class="card-text" style="color:darkblue">Address : @instructor.Address</h5>
			<h4 class="card-text" style="color:blue">PhoneNumber : @instructor.PhoneNumber </h4>
			<h4 class="card-text" style="color:blue">Department : @(Department?.Name ?? "Not Assign") </h4>
			<h5 class="card-text" style="color:blue">Course : @(CourseName?.Name ?? "Not Assign") </h5>
			<div>
				<a asp-action="Index" class="btn btn-dark fw-bold m-3">Return back</a>
				 @if (User.IsInRole("Admin")) 
					{ 
					<a asp-action="Edit" asp-route-id="@instructor.Id" asp-fragment="#" class="btn btn-warning fw-bold">Edit</a>
					<a asp-action="Delete" asp-route-id="@instructor.Id" asp-fragment="#" class="btn btn-danger fw-bold" onclick="return confirm('Are you Sure to delete ?')">Delete</a>
				 } 
			</div>
		</div>
	</div>
</div>

