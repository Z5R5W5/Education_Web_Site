@model ApplicationUser
@{
    ViewData["Title"] = "Edit";
    SelectList roles = new SelectList(ViewBag.Roles, "Name", "Name");

    Layout = "~/Views/Shared/_OperationLayout.cshtml";
}

<h2>Edit User Role</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="NewRole">Select Role</label>
        <select asp-for="Role" asp-items="roles" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Update Role</button>
    <a asp-action="Index" asp-fragment="#" class="btn btn-dark w-25">Cancel</a>

</form>

