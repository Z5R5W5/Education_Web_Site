@model List<ApplicationUser>
@{
    ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">User List</h2>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>UserName</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Gender</th>
                <th>Birth Date</th>
                <th>Address</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int i = 1;
                foreach (var user in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@user.UserName</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Gender</td>
                        <td>@user.BirthDate.ToShortDateString()</td>
                        <td>@user.Address</td>
                        <td>@user.Role</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger bi bi-trash" onclick="return confirm('Are you sure to delete?');">Delete</a>
                        </td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td colspan="11" class="text-center text-muted">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>





